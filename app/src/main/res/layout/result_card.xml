<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- The CardView needs to be wrapped to ensure spacing is applied correctly. -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/result_card"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/textLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:paddingTop="24dp"
            android:paddingLeft="16dp" />

            <TextView
            android:id="@+id/txtStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_below="@id/txtName"
            android:paddingLeft="16dp"
            android:textColor="@color/secondary_text"
            android:paddingTop="8dp" />

            <TextView
            android:id="@+id/txtSuburb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suburb"
            android:textSize="14sp"
            android:layout_below="@+id/txtStreet"
            android:paddingLeft="16dp"
            android:textColor="@color/secondary_text"
            android:paddingBottom="16dp"
            android:paddingTop="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="150dp"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRateReview"
                android:src="@drawable/ic_rate_review_white_24dp"
                android:padding="8dp"
                android:onClick="addReview" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnFavourite"
                android:src="@drawable/ic_favorite_white_24dp"
                android:padding="8dp"
                android:layout_alignTop="@+id/btnRateReview"
                android:layout_toRightOf="@+id/btnRateReview"
                android:layout_toEndOf="@+id/btnRateReview" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnShare"
                android:src="@drawable/ic_share_white_24dp"
                android:padding="8dp"
                android:layout_alignTop="@+id/btnFavourite"
                android:layout_toRightOf="@+id/btnFavourite"
                android:layout_toEndOf="@+id/btnFavourite" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>